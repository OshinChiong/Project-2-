<div class="input-container">
    <i class="fa fa-envelope icon"></i>
{{!-- <label> Email </label> --}}
<input class="input-field"  type="text" placeholder="Email" name="email" value="oshinchiongh@gmail.com" />
 </div>

 <div class="input-container">
   <i class="fa fa-user icon"></i>
{{!-- <label> Username </label> --}}
<input class="input-field" type="text" placeholder="Username" name="username" value="" />
</div>

<div class="input-container">
    <i class="fa fa-key icon"></i>
